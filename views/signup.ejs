    <div class="hero-wrap js-fullheight">
        <div class="overlay"></div>
        <div id="particles-js"></div>
        <div class="py-3 wrap-login100 pcontainInnerHoriz">
            <form class="login100-form validate-form" method="post" action="/usignup" id="ff">
                <!--Title-->
                
                <span class="login100-form-title pb-2 pt-2">
					Sign Up
                </span>
                <div id="personalPage">
                    <div class="numberPage text-center">
                        <span>1</span>
                    </div>
                    <label class="pt-4 pb-3 infoType">Personal Information
                </label>
                    <div class="row justify-content-between">
                        <div class="col-md-6">
                            <label class="container">Name
                        </label>
                            <div class="wrap-input100 mb-2">
                                <input class="input100"  name="name" type="text" required>
                                <span class="focus-input100"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="container">Age
                        </label>
                            <div class="wrap-input100 mb-2">
                                <input class="input100" name ="age" type="number" required>
                                <span class="focus-input100"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class=col-md-6>
                            <label>State
                        </label>
                        <select id="bloodType" class="d-block"  name ="state" required> 
                            <option value="" selected style="display:none">Choose one</option>
                            <option value="TamilNadu">TamilNadu</option>
                                <option value="Andhra Pradesh">Andhra Pradesh</option>
                                <option value="Karnataka">Karnataka</option>
                                <option value="Kerala">Kerala</option>
                                <option value="Maharashtra">Maharashtra</option>
                                <option value="Odisha">Odisha</option>
                                <option value="Chhattisgarh">Chhattisgarh</option>
                                
                    </select>
                        </div>
                        <div class="col-md-6">
                            <label>City
                            </label>
                                <div class="wrap-input100 mb-2">
                                    <input class="input100" name="city" type="text" required>
                                    <span class="focus-input100"></span>
                                </div>
                            
                        </div>
                    </div>
                    <!--Login Button-->
                    <div class="mt-5 text-center">
                        <span class="nextBtn" onclick="goContactPage()">
						Next
                    </span>
                    </div>
                </div>
                <div id="contactPage">
                    <div class="numberPage text-center">
                        <span>2</span>
                    </div>
                    <label class="pt-4 pb-3 infoType">Contact Information
                    </label>
                    
                    <label class="container">Address
                            </label>
                    <div class="wrap-input100 mb-2">
                        <input class="input100" name ="address" type="text" required>
                        <span class="focus-input100"></span>
                    </div>
                    <div class="mt-5 text-center">
                        <span class="nextBtn" onclick="goAccountPage()">
                                    Next
                                </span>
                    </div>
                </div>
                <div id="accountPage">
                    <div class="numberPage text-center">
                        <span>3</span>
                    </div>
                    <label class="pt-4 pb-3 infoType">Account Information
                    </label>
                    
                    <label class="container">Email
                    </label>
                    <div class="wrap-input100 mb-2">
                        <input class="input100" name ="email" type="text" required>
                        <span class="focus-input100"></span>
                    </div>
                    <label class="container">Password
                    </label>
                    <div class="wrap-input100 mb-2">
                        <input class="input100" name ="password" type="password" required>
                        <span class="focus-input100"></span>
                    </div>
                    
                    <!--Login Button-->
                    <div class="mt-5 text-center">
                        <span class="nextBtn" onclick="goMedicalPage()">
                            Next
                        </span>
                    </div>
                </div>
               
               
                <div id="medicalPage" >
                    <div class="numberPage text-center">
                        <span>4</span>
                    </div>
                    <label class="pt-4 pb-3 infoType">Medical Information
                    </label>
                    <div class="row justify-content-between">
                        <div class=col-md-6>
                            <label>Height
                        </label>
                            <div class="wrap-input100 mb-2">
                                <input class="input100" name ="ht" type="number" required>
                                <span class="focus-input100"></span>
                            </div>
                        </div>
                        <div class=col-md-6>
                            <label>Weight
                        </label>
                            <div class="wrap-input100 mb-2">
                                <input class="input100" name ="wt" type="number" required>
                                <span class="focus-input100"></span>
                            </div>
                        </div>
                        </div>
                        <div class="row">
                        <div class=col-md-6>
                            <label>BP
                        </label>
                            <div class="wrap-input100 mb-2">
                                <input class="input100"  name ="bp" type="number" required>
                                <span class="focus-input100"></span>
                            </div>
                        </div>
                        <div class=col-md-6>
                            <label>Sugar
                        </label>
                            <div class="wrap-input100 mb-2">
                                <input class="input100" name ="sugar" type="number" required>
                                <span class="focus-input100"></span>
                            </div>
                        </div>
                        </div>
                        
                    <div class="row">
                        
                        <div class="col-sm-4">
                           
                            <label>Ailments
                        </label>
                        
                        <div class="wrap-input100 mb-2">
                            <input class="input100"  name="ailments" type="text" required>
                            <span class="focus-input100"></span>
                        </div></div>
                       
                        <div class="col-sm-2">
                            <label>COVID
                        </label>
                       
                        <select id="cityName" name="covid" class="d-block" required>
                            <option value="" selected style="display:none">Choose one</option>
                            <option value="Affected">Affected</option>
                            <option value="Not affected">Not affected</option>
                            <option value="Affected but recovered">Affected but recovered</option>
                            
                          </select>
                        
                        
                        </div>
                   
                        </div>        
                        
                    <div class="row">
                           <div class="col-sm-2">
                            <label>Blood type:
                        </label>
                        <div>
                        <select id="cityName" name="type" class="d-block" required>
                            <option value="" selected style="display:none">Choose one</option>
                            <option value="A+">A+</option>
                            <option value="A-">A-</option>
                            <option value="B+">B+</option>
                            <option value="B-">B-</option>
                            <option value="O+">O+</option>
                            <option value="O-">O-</option>
                            <option value="AB+">AB+</option>
                            <option value="AB-">AB-</option>
                          </select>
                        
                        
                        </div>
                        <div>
                        </div>
                  
                         <!--<div class="row">-->
                             
              
                       
                    </div>
                   
                    
                </div>
                <div class="container-login100-form-btn pt-3">
                        
                    <button id="btn-ss" type="submit" class="btn btn-info"><i class="icon-hand-right"></i>   Sign Up</button>
                    
                </div>
                    <!--Login Button-->
                    
                </div>
              

        <!--Login Button-->
            </div>
    <!--End Login Button-->
